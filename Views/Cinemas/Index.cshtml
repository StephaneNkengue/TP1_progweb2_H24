@model List<Cinema>


@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Nombre de salles</th>
                <th>Ville</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cinema in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Cinemas" asp-action="Edit" asp-route-id="@cinema.CinemaId">@cinema.Nom</a>
                    </td>
                    <td>@cinema.NombreSalle</td>
                    <td>@cinema.Ville</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Il n'y a pas encore de cinémas.</h2>
}

